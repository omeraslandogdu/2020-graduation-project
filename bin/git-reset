#!/usr/bin/env bash

# Project reset and update remote
#
# Usage: ./bin/reset
branch=master

while [ "$1" != "" ]; do
    case $1 in
        -d | --dev )    branch=development
                                ;;
        * )                     usage
                                exit 1
    esac
    shift
done

echo 'Resetting ...'
git reset --hard && git fetch --all --prune

echo 'Updating ...'
git checkout $branch && git pull origin $branch --rebase